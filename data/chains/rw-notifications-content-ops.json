{
  "id": "rw-notifications-content-ops",
  "name": "Notifications - Content Ops",
  "description": "Copy/SEO checks and content updates for Notifications (delivery and inbox).",
  "version": "1.0.0",
  "nodes": [
    {
      "id": "figma-parse",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_parse_url",
        "args": {
          "url": "{{input.figma_url}}"
        }
      }
    },
    {
      "id": "figma-summary",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_get_node_summary",
        "args": {
          "file_key": "{{figma-parse.file_key}}",
          "node_id": "{{figma-parse.node_id}}",
          "max_children": 80
        }
      },
      "depends_on": [
        "figma-parse"
      ]
    },
    {
      "id": "figma-bundle",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_get_node_bundle",
        "args": {
          "file_key": "{{figma-parse.file_key}}",
          "node_id": "{{figma-parse.node_id}}",
          "depth": 4
        }
      },
      "depends_on": [
        "figma-parse"
      ]
    },
    {
      "id": "draft-copy",
      "type": "llm",
      "llm": {
        "model": "claude-cli",
        "prompt": "Draft marketing copy for Notifications screen.\nUse Figma summary for hierarchy and intent.\nFigma summary:\n{{figma-summary}}"
      },
      "depends_on": [
        "figma-summary"
      ]
    },
    {
      "id": "seo-audit",
      "type": "tool",
      "tool": {
        "server": "web",
        "name": "seo_audit",
        "args": {
          "url": "{{input.base_url}}",
          "target": "notifications"
        }
      },
      "depends_on": [
        "draft-copy"
      ]
    },
    {
      "id": "refine-copy",
      "type": "llm",
      "llm": {
        "model": "gemini",
        "prompt": "Refine copy for Notifications based on SEO audit.\nDraft:\n{{draft-copy}}\n\nAudit:\n{{seo-audit}}"
      },
      "depends_on": [
        "draft-copy",
        "seo-audit"
      ]
    },
    {
      "id": "task-list",
      "type": "llm",
      "llm": {
        "model": "codex",
        "prompt": "Create content update tasks for Notifications.\nRefined copy:\n{{refine-copy}}\n\nReturn ONLY JSON array of tasks with title/priority/description."
      },
      "depends_on": [
        "refine-copy"
      ]
    },
    {
      "id": "masc-batch-add",
      "type": "tool",
      "tool": {
        "server": "masc",
        "name": "masc_batch_add_tasks",
        "args": {
          "tasks": "{{task-list}}"
        }
      },
      "depends_on": [
        "task-list"
      ]
    },
    {
      "id": "final-report",
      "type": "llm",
      "llm": {
        "model": "claude-cli",
        "prompt": "Summarize content ops outcomes for Notifications.\nInclude SEO gaps and rollout plan."
      },
      "depends_on": [
        "refine-copy",
        "task-list"
      ]
    }
  ],
  "output": "final-report",
  "input_schema": {
    "type": "object",
    "properties": {
      "figma_url": {
        "type": "string",
        "description": "Figma frame/component URL"
      },
      "base_url": {
        "type": "string",
        "description": "Web URL for audits"
      },
      "repo": {
        "type": "string",
        "description": "Repo identifier (owner/name)"
      },
      "branch": {
        "type": "string",
        "default": "main"
      },
      "locale": {
        "type": "string",
        "default": "en-US"
      },
      "feature_name": {
        "type": "string",
        "description": "Feature or screen label"
      },
      "incident_summary": {
        "type": "string",
        "description": "Incident summary text"
      },
      "service_name": {
        "type": "string",
        "description": "Service identifier for metrics"
      },
      "time_window": {
        "type": "string",
        "default": "24h"
      }
    },
    "required": [
      "figma_url"
    ]
  },
  "metadata": {
    "author": "Chain Engine",
    "tags": [
      "realworld-200",
      "masc",
      "figma",
      "llm",
      "notifications",
      "content-ops"
    ],
    "estimated_duration_sec": 180,
    "estimated_cost_usd": 0.2
  }
}
