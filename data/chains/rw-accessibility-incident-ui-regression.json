{
  "id": "rw-accessibility-incident-ui-regression",
  "name": "Accessibility - Incident UI Regression",
  "description": "Map incident context to UI fixes for Accessibility (inclusive design).",
  "version": "1.0.0",
  "nodes": [
    {
      "id": "figma-parse",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_parse_url",
        "args": {
          "url": "{{input.figma_url}}"
        }
      }
    },
    {
      "id": "figma-summary",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_get_node_summary",
        "args": {
          "file_key": "{{figma-parse.file_key}}",
          "node_id": "{{figma-parse.node_id}}",
          "max_children": 80
        }
      },
      "depends_on": [
        "figma-parse"
      ]
    },
    {
      "id": "figma-bundle",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_get_node_bundle",
        "args": {
          "file_key": "{{figma-parse.file_key}}",
          "node_id": "{{figma-parse.node_id}}",
          "depth": 4
        }
      },
      "depends_on": [
        "figma-parse"
      ]
    },
    {
      "id": "incident-parse",
      "type": "llm",
      "llm": {
        "model": "gemini",
        "prompt": "Summarize the incident and suspected UI impact for Accessibility.\nIncident:\n{{input.incident_summary}}"
      },
      "depends_on": [
        "figma-summary"
      ]
    },
    {
      "id": "ui-match",
      "type": "llm",
      "llm": {
        "model": "codex",
        "prompt": "Map incident symptoms to Accessibility UI components.\nIncident:\n{{incident-parse}}\n\nUI:\n{{figma-summary}}"
      },
      "depends_on": [
        "incident-parse",
        "figma-summary"
      ]
    },
    {
      "id": "error-metrics",
      "type": "tool",
      "tool": {
        "server": "web",
        "name": "error_metrics",
        "args": {
          "service": "{{input.service_name}}",
          "window": "{{input.time_window}}"
        }
      },
      "depends_on": [
        "incident-parse"
      ]
    },
    {
      "id": "fix-plan",
      "type": "llm",
      "llm": {
        "model": "claude-cli",
        "prompt": "Draft a fix plan for Accessibility.\nUI match:\n{{ui-match}}\n\nMetrics:\n{{error-metrics}}"
      },
      "depends_on": [
        "ui-match",
        "error-metrics"
      ]
    },
    {
      "id": "task-list",
      "type": "llm",
      "llm": {
        "model": "codex",
        "prompt": "Create incident remediation tasks for Accessibility.\nFix plan:\n{{fix-plan}}\n\nReturn ONLY JSON array of tasks with title/priority/description."
      },
      "depends_on": [
        "fix-plan"
      ]
    },
    {
      "id": "masc-batch-add",
      "type": "tool",
      "tool": {
        "server": "masc",
        "name": "masc_batch_add_tasks",
        "args": {
          "tasks": "{{task-list}}"
        }
      },
      "depends_on": [
        "task-list"
      ]
    },
    {
      "id": "final-report",
      "type": "llm",
      "llm": {
        "model": "gemini",
        "prompt": "Summarize the incident UI remediation for Accessibility.\nInclude scope, risks, and verification steps."
      },
      "depends_on": [
        "fix-plan",
        "task-list"
      ]
    }
  ],
  "output": "final-report",
  "input_schema": {
    "type": "object",
    "properties": {
      "figma_url": {
        "type": "string",
        "description": "Figma frame/component URL"
      },
      "base_url": {
        "type": "string",
        "description": "Web URL for audits"
      },
      "repo": {
        "type": "string",
        "description": "Repo identifier (owner/name)"
      },
      "branch": {
        "type": "string",
        "default": "main"
      },
      "locale": {
        "type": "string",
        "default": "en-US"
      },
      "feature_name": {
        "type": "string",
        "description": "Feature or screen label"
      },
      "incident_summary": {
        "type": "string",
        "description": "Incident summary text"
      },
      "service_name": {
        "type": "string",
        "description": "Service identifier for metrics"
      },
      "time_window": {
        "type": "string",
        "default": "24h"
      }
    },
    "required": [
      "figma_url"
    ]
  },
  "metadata": {
    "author": "Chain Engine",
    "tags": [
      "realworld-200",
      "masc",
      "figma",
      "llm",
      "accessibility",
      "incident-ui-regression"
    ],
    "estimated_duration_sec": 180,
    "estimated_cost_usd": 0.2
  }
}
