{
  "id": "rw-dashboard-design-to-code-verify",
  "name": "Dashboard - Design to Code Verify",
  "description": "Generate HTML/CSS and verify visually (SSIM) for Dashboard (overview metrics).",
  "version": "1.0.0",
  "nodes": [
    {
      "id": "figma-parse",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_parse_url",
        "args": {
          "url": "{{input.figma_url}}"
        }
      }
    },
    {
      "id": "figma-summary",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_get_node_summary",
        "args": {
          "file_key": "{{figma-parse.file_key}}",
          "node_id": "{{figma-parse.node_id}}",
          "max_children": 80
        }
      },
      "depends_on": [
        "figma-parse"
      ]
    },
    {
      "id": "figma-bundle",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_get_node_bundle",
        "args": {
          "file_key": "{{figma-parse.file_key}}",
          "node_id": "{{figma-parse.node_id}}",
          "depth": 4
        }
      },
      "depends_on": [
        "figma-parse"
      ]
    },
    {
      "id": "generate-html",
      "type": "llm",
      "llm": {
        "model": "claude-cli",
        "prompt": "Generate minimal HTML/CSS for the Dashboard screen.\nUse the Figma bundle. Output only HTML (no markdown).\nFigma bundle:\n{{figma-bundle}}"
      },
      "depends_on": [
        "figma-bundle"
      ]
    },
    {
      "id": "visual-verify",
      "type": "tool",
      "tool": {
        "server": "figma",
        "name": "figma_verify_visual",
        "args": {
          "file_key": "{{figma-parse.file_key}}",
          "node_id": "{{figma-parse.node_id}}",
          "html": "{{generate-html}}",
          "target_ssim": 0.93,
          "width": 1200,
          "height": 800
        }
      },
      "depends_on": [
        "figma-parse",
        "generate-html"
      ]
    },
    {
      "id": "assess-diff",
      "type": "llm",
      "llm": {
        "model": "gemini",
        "prompt": "Review the visual verification output for Dashboard.\nSummarize gaps and likely UI regressions.\n\nSSIM report:\n{{visual-verify}}"
      },
      "depends_on": [
        "visual-verify",
        "figma-summary"
      ]
    },
    {
      "id": "task-list",
      "type": "llm",
      "llm": {
        "model": "codex",
        "prompt": "Create remediation tasks for Dashboard visual gaps.\nUse the assessment below.\n{{assess-diff}}\n\nReturn ONLY JSON array of tasks with title/priority/description."
      },
      "depends_on": [
        "assess-diff"
      ]
    },
    {
      "id": "masc-batch-add",
      "type": "tool",
      "tool": {
        "server": "masc",
        "name": "masc_batch_add_tasks",
        "args": {
          "tasks": "{{task-list}}"
        }
      },
      "depends_on": [
        "task-list"
      ]
    },
    {
      "id": "final-report",
      "type": "llm",
      "llm": {
        "model": "claude-cli",
        "prompt": "Finalize the Dashboard verification report.\nInclude SSIM score, gaps, and next steps.\n\nAssessment:\n{{assess-diff}}"
      },
      "depends_on": [
        "assess-diff",
        "task-list"
      ]
    }
  ],
  "output": "final-report",
  "input_schema": {
    "type": "object",
    "properties": {
      "figma_url": {
        "type": "string",
        "description": "Figma frame/component URL"
      },
      "base_url": {
        "type": "string",
        "description": "Web URL for audits"
      },
      "repo": {
        "type": "string",
        "description": "Repo identifier (owner/name)"
      },
      "branch": {
        "type": "string",
        "default": "main"
      },
      "locale": {
        "type": "string",
        "default": "en-US"
      },
      "feature_name": {
        "type": "string",
        "description": "Feature or screen label"
      },
      "incident_summary": {
        "type": "string",
        "description": "Incident summary text"
      },
      "service_name": {
        "type": "string",
        "description": "Service identifier for metrics"
      },
      "time_window": {
        "type": "string",
        "default": "24h"
      }
    },
    "required": [
      "figma_url"
    ]
  },
  "metadata": {
    "author": "Chain Engine",
    "tags": [
      "realworld-200",
      "masc",
      "figma",
      "llm",
      "dashboard",
      "design-to-code-verify"
    ],
    "estimated_duration_sec": 180,
    "estimated_cost_usd": 0.2
  }
}
