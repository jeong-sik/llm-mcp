{
  "id": "cascade-default",
  "name": "Default 3-Tier Cascade",
  "description": "Cost-optimized LLM routing: local GLM -> Gemini -> Claude. Escalates on low confidence.",
  "version": "1.0.0",
  "nodes": [
    {
      "id": "glm",
      "type": "llm",
      "model": "glm",
      "prompt": "{{input}}"
    },
    {
      "id": "gemini",
      "type": "llm",
      "model": "gemini",
      "prompt": "{{input}}"
    },
    {
      "id": "claude",
      "type": "llm",
      "model": "claude",
      "prompt": "{{input}}"
    },
    {
      "id": "cascade",
      "type": "cascade",
      "tiers": [
        {
          "tier_node": { "id": "glm_ref", "type": "chain_ref", "ref": "glm" },
          "tier_index": 0,
          "confidence_threshold": 0.7,
          "cost_weight": 0.0,
          "pass_context": false
        },
        {
          "tier_node": { "id": "gemini_ref", "type": "chain_ref", "ref": "gemini" },
          "tier_index": 1,
          "confidence_threshold": 0.7,
          "cost_weight": 1.0,
          "pass_context": true
        },
        {
          "tier_node": { "id": "claude_ref", "type": "chain_ref", "ref": "claude" },
          "tier_index": 2,
          "confidence_threshold": 0.0,
          "cost_weight": 10.0,
          "pass_context": true
        }
      ],
      "max_escalations": 2,
      "context_mode": "summary"
    }
  ],
  "output": "cascade",
  "config": {
    "max_depth": 4,
    "max_concurrency": 1,
    "timeout": 120,
    "trace": true,
    "direction": "LR"
  },
  "metadata": {
    "category": "routing",
    "use_case": "Cost optimization for general LLM queries",
    "tier_models": ["glm", "gemini", "claude"]
  }
}
